<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="LecturerSetUpProfileActivity"
    android:background="@drawable/blury_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/Lprofile_image_icon"
            android:layout_width="176dp"
            android:layout_height="150dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_person_24"
            android:contentDescription="Profile Image"
            android:layout_gravity="center_horizontal" />

        <!-- General Fields -->
        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"
            android:hint="Last Name"
            android:inputType="textPersonName"

            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth (DD/MM/YYYY)"
            android:inputType="date"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"

            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:background="@drawable/form_borderline" />

        <!-- Lecturer-Specific Fields -->
        <EditText
            android:id="@+id/editTextQualifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"
            android:hint="Qualifications"
            android:inputType="textMultiLine"

            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextSubjectsTaught"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"

            android:hint="Subjects Taught"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextHourlyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"

            android:hint="Hourly Rate (e.g., 20 USD)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextBiography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_borderline"
            android:hint="Short Biography"

            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:padding="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Lecturer Profile"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
